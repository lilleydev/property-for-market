<table>
  <tr>
    <th> Task Name </th>
    <th> Description </th>
    <th> Owner </th>
    <th> Volunteer to Help </th>

  </tr>
  <% @tasks.each do |t| %>
  <tr>
    <% if t.user == current_user %>
    <td> Your task for <%= t.name %> is displayed for others to sign up!</td>
    <% else %>
    <td> <%= t.name %> </td>
    <td> <%= t.description %></td>
    <td> <%= t.user.email %></td>
    <% if t.helpers.include?(current_user) %>
    <td> Signed Up! </td>
    <% else %>
    <td><%= link_to "Volunteer", task_help_path(t) %></td>
    <% end %>

  </tr>
  <% end %>
  <% end %>
</table>