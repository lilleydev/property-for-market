<table>
  <tr>
    <th> Task Name </th>
    <th> Description </th>
    <th> Owner </th>
    <th> Volunteer to Help </th>
    <th> Need help by: </th>

  </tr>
  <% @tasks.each do |t| %>

  <tr>
    <% if t.user == current_user %>
    <td> Your task for <%= t.name %> is displayed for others to sign up!</td>
    <% else %>
    <td> <%= t.name %> </td>
    <td> <%= t.description %></td>
    <td> <%= t.user.email %></td>
    <% if t.helpers.exclude?(current_user) %>
    <td><%= link_to "Help Out", task_help_path(t) %></td>
    <% else %>
    <td> Signed Up! </td>
    <% end %>
    <td>
      date



    </td>
  </tr>
  <% end %>
  <% end %>
</table>