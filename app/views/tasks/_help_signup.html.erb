<div id='header'>
  <h4> Signed up to Help: </h4>
</div>
<div id="container">
  <% if !@room %>
  <table>
    <tr>
      <th> Name </th>
      <th> Description </th>
      <th> Person's Contact </th>
      <th> Cancel</th>
      <th> Instructions </th>


    </tr>
    <% current_user.helped_tasks.each do |t| %>
    <tr>
      <td> <%= t.name %> </td>
      <td> <%= t.description %></td>
      <td> <%= t.user.email %></td>
      <td> <%= link_to "Can't make it", task_cancel_path(t), method: :delete %></td>
      <td>

        <%= t.user_tasks.find_by(task_id: t.id).instructions? ?  t.user_tasks.find_by(task_id: t.id).instructions : "N/A" %>



      </td>



    </tr>
    <% end %>
  </table>
  <%end%>
</div>